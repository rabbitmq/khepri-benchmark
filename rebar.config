%% vim:ft=erlang:
{minimum_otp_vsn, "23.0"}.

{deps, [{khepri, {git, "https://github.com/rabbitmq/khepri.git",
                  {branch, "main"}}},
        {erlperf, {git, "https://github.com/rabbitmq/erlperf.git",
                   {branch, "configure-concurrency-increase-steps"}}}]}.

{escript_incl_apps,
 [khepri,
  erlperf]}.

{escript_main_app, khepri_benchmark}.
{escript_name, "khepri-benchmark"}.
{escript_emu_args,
 "%%! -escript main khepri_benchmark -sname khepri-benchmark +sbtu\n"}.
{escript_incl_extra, [{"priv/*", "."}]}.
